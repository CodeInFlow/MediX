<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".intro2">

    <ImageView
        android:id="@+id/img_intro2_bg"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/intro2_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finding available appointments "
        android:layout_below="@+id/img_intro2_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="are"
        android:layout_below="@+id/txt1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple And Effortless"
        android:layout_below="@+id/txt2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/themeColor"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/img_intro2_bg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt3"
        android:src="@drawable/intro2_bg1"
        android:layout_marginTop="60dp"/>

    <Button
        android:id="@+id/btn_Next"
        android:layout_width="160dp"
        android:layout_marginTop="30dp"
        android:layout_height="60dp"
        android:text="Get Start"
        android:layout_below="@+id/img_intro2_bg2"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_et"
        android:backgroundTint="@color/themeColor"/>

</RelativeLayout>